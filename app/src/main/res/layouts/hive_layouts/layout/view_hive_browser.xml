<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_outer_hive_browser"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="3"
        android:background="@color/itemColor"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- First Horizontal LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_linear_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_label_hive_name"
                android:text="@string/hive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/basicTextColor"
                android:paddingHorizontal="8dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_value_hives_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingHorizontal="8dp"
                android:textColor="@color/basicTextColor"
                android:text="@string/place_holder"
                android:gravity="end"
                android:textSize="18dp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
