<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@color/backgroundColor"
    tools:context=".StationActivities.AdjustStationActivity">

    <EditText
        android:id="@+id/et_adjust_hive_nametag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hintColor"
        android:textColor="@color/basicTextColor"
        android:hint="Hive Name"/>

    <LinearLayout
        android:id="@+id/QR_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/et_adjust_hive_nametag">
        <EditText
            android:id="@+id/et_adjust_hive_qr_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/basicTextColor"
            android:hint="QR String"/>
        <Button
            android:id="@+id/btn_scan_QR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            android:textColor="@color/buttonTextColor"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/buttonColor">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/station_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/QR_layout"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/station_change_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station:"
            android:textColor="@color/basicTextColor"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/station_change_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/station_change_layout"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_adjust_hive_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="8dp"
            android:text="Save"/>

        <Button
            android:id="@+id/btn_adjust_hive_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:text="Back" />

    </LinearLayout>
</RelativeLayout>
