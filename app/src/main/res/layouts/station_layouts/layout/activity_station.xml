<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- FrameLayout for the header "Notes" -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headerColor"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_logs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Station"
            android:textColor="@color/basicTextColor"
            android:textSize="30dp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- ScrollView to hold the dynamic fields -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Station Name row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station name:"
                    android:textSize="16sp"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tv_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="16sp"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Use:"
                    android:textSize="16sp"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tv_in_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_adjust_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjust Station"
                    android:textColor="@color/buttonTextColor"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTint="@color/buttonColor">
                </Button>

                <Button
                    android:id="@+id/btn_delete_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Station"
                    android:textColor="@color/buttonTextColor"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTint="@color/buttonColor">
                </Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
