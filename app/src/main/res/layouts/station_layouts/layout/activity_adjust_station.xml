<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".StationActivities.AdjustStationActivity">

    <EditText
        android:id="@+id/et_adjust_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/station_name"
        android:textColor="@color/basicTextColor"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/et_adjust_station_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location"
        android:layout_marginTop="8dp"
        android:textColor="@color/basicTextColor"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/et_adjust_station_hive_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hive_count"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:textColor="@color/basicTextColor"
        android:textColorHint="@color/hintColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_use"
            android:paddingEnd="8dp"
            android:textColor="@color/basicTextColor" />

        <CheckBox
            android:id="@+id/checkbox_in_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_adjust_station_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_margin="8dp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor" />

        <Button
            android:id="@+id/btn_adjust_station_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_margin="8dp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor" />
    </LinearLayout>
</LinearLayout>
