<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:id="@+id/menu_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/btn_settings">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/basicTextColor"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btn_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/database"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_inspections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inspections"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_honey_harvest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/honey_harvests"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_Supplemented_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supplemented_feed"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_to_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_do_s"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_discarded_entities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discarded_entities"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</RelativeLayout>
