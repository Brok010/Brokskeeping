<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundColor"
    android:padding="24dp">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
            android:textColor="@color/basicTextColor"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_inspections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspections"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_honey_harvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Honey Harvest"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_to_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do's"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_discarded_entities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discarded entities"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
