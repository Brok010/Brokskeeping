<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <!-- Header -->
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:background="@color/headerColor"
      android:gravity="center"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <TextView
          android:id="@+id/tv_controls_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="Inspections"
          android:layout_margin="8dp"
          android:textColor="@color/basicTextColor"
          android:textSize="20dp"
          android:maxLines="2"
          android:layout_weight="4"
          android:textStyle="bold">
      </TextView>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">
        <Button
            android:id="@+id/NewInspectionBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonColor"
            android:text="New inspection"
            android:textColor="@color/buttonTextColor"
            android:gravity="center"
            android:layout_gravity="center"
            style="?android:attr/buttonBarButtonStyle">
        </Button>
      </LinearLayout>
    </LinearLayout>
  </FrameLayout>

  <!-- Filter Section -->
  <LinearLayout
      android:id="@+id/ll_todo_filters"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/itemColor"
      android:orientation="horizontal"
      android:gravity="center"
      android:padding="8dp"
      android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/ll_station_filter"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Station"
          android:textColor="@color/basicTextColor" />

      <EditText
          android:id="@+id/station_filter_input"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="8dp"
          android:clickable="true"
          android:focusable="false"
          android:inputType="none" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_date_filter"
        android:layout_weight="1"
        android:layout_marginEnd="16dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Date"
          android:textColor="@color/basicTextColor" />

      <EditText
          android:id="@+id/date_filter_input"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="8dp"
          android:clickable="true"
          android:focusable="false"
          android:inputType="none" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>
