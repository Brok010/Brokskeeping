<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headerColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inspection_for_hive"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingEnd="8dp"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:id="@+id/tv_hive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/basicTextColor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:paddingEnd="8dp"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:text="@string/place_holder"
            android:textSize="18sp"
            android:textColor="@color/basicTextColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frames_per_super"
                android:paddingEnd="8dp"
                android:textColor="@color/basicTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_frames_per_super"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/basicTextColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supers"
                android:layout_marginRight="8dp"
                android:textColor="@color/basicTextColor" />

            <TextView
                android:id="@+id/tv_supers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attention_worth"
                android:paddingEnd="8dp"
                android:textColor="@color/basicTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_attention"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/basicTextColor" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aggressivity"
                android:paddingEnd="8dp"
                android:textColor="@color/basicTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_aggressivity"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/basicTextColor" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brood_frames"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:id="@+id/tv_brood_frames_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder"
            android:layout_marginHorizontal="8dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adjusted"
            android:textColor="@color/basicTextColor" />

        <ImageView
            android:id="@+id/iv_brood_frames"
            android:layout_width="20dp"
            android:layout_marginHorizontal="8dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_brood_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder"
            android:textSize="18sp"
            android:textColor="@color/basicTextColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/honey_frames"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:id="@+id/tv_honey_frames_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder"
            android:layout_marginHorizontal="8dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adjusted"
            android:textColor="@color/basicTextColor" />

        <ImageView
            android:id="@+id/iv_honey_frames"
            android:layout_width="20dp"
            android:layout_marginHorizontal="8dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_honey_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/place_holder"
            android:textColor="@color/basicTextColor" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drone_brood_frames"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:id="@+id/tv_drone_frames_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/place_holder"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adjusted"
            android:textColor="@color/basicTextColor" />

        <ImageView
            android:id="@+id/iv_drone_frames"
            android:layout_width="20dp"
            android:layout_marginHorizontal="8dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_drone_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/place_holder"
            android:textColor="@color/basicTextColor" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/honey_harvested"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_honey_frames_harvested"
            android:layout_marginHorizontal="8dp"
            android:textSize="18sp"
            android:text="@string/place_holder"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colony_end_state"
            android:textColor="@color/basicTextColor" />

        <TextView
            android:id="@+id/tv_colony_end_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginHorizontal="8dp"
            android:text="@string/place_holder" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supplemented_feed"
                android:textColor="@color/basicTextColor" />

            <ImageView
                android:id="@+id/iv_supplemented_feed"
                android:layout_width="20dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/winter_ready"
                android:textColor="@color/basicTextColor" />

            <ImageView
                android:id="@+id/iv_winter_ready"
                android:layout_width="20dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separated"
                android:textColor="@color/basicTextColor" />

            <ImageView
                android:id="@+id/iv_separated"
                android:layout_width="20dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_separated_count"
                android:text="@string/place_holder"
                android:textSize="18sp"
                android:textColor="@color/basicTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joined"
                android:textColor="@color/basicTextColor" />

            <ImageView
                android:id="@+id/iv_joined"
                android:layout_width="20dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_joined_count"
                android:text="@string/place_holder"
                android:textSize="18sp"
                android:textColor="@color/basicTextColor" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        android:textColor="@color/basicTextColor" />

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:inputType="textMultiLine"
        android:nestedScrollingEnabled="true"
        android:textSize="18sp"/>

</LinearLayout>
