<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@color/itemColor"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- First Row: Station and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Station Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hive: "
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/basicTextColor" />

                <TextView
                    android:id="@+id/tv_hive_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/basicTextColor" />
            </LinearLayout>

            <!-- Status Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free frames: "
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/basicTextColor" />

                <TextView
                    android:id="@+id/tv_free_frames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/basicTextColor" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row: Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes: "
                android:layout_marginEnd="4dp"
                android:textColor="@color/basicTextColor" />

            <TextView
                android:id="@+id/tv_inspection_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="String"
                android:textColor="@color/basicTextColor" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
